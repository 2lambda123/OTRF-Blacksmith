{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Log Analytics workspace used to aggregate data"
            }
        },
        "eventLogs": {
            "type": "array",
            "minLength": 1,
            "metadata": {
                "description": "List of Windows event logs to collect from, if using multiple logs, make their names comma separate. E.g. Microsoft-Windows-Bits-Client/Operational, Microsoft-Windows-TerminalServices-RemoteConnectionManager/Operational"
            },
            "defaultValue": [
                "System",
                "Microsoft-Windows-Sysmon/Operational"
            ]
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/dataSources",
            "apiVersion": "2015-11-01-preview",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('workspaceName'), '/winEvent', copyindex())]",
            "copy": {
                "name": "winEventCopy",
                "count": "[length(parameters('eventLogs'))]"
            },
            "kind": "WindowsEvent",
            "properties": {
                "eventLogName": "[trim(parameters('eventLogs')[copyIndex()])]",
                "eventTypes": [
                    {
                        "eventType": "Error"
                    },
                    {
                        "eventType": "Warning"
                    },
                    {
                        "eventType": "Information"
                    }
                ]
            }
        }
    ]
}